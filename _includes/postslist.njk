{%- set pageCSS %}
.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }
{% endset %}
<style>
	{{pageCSS | postCSS | safe}}
</style>
<ol reversed class="postlist">
	{%- for post in postslist | reverse %}
		<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
			On <time class="postlist-date text-sm" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time> -
			<a href="{{ post.url }}" class="postlist-link">
				{% if post.data.title %}{{ post.data.title }}
				{% else %}
					<code>{{ post.url }}</code>
				{% endif %}
			</a>
		</li>
	{%- endfor %}
</ol>