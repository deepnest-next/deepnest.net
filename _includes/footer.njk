	{% include "components/darkmode_toggle2.njk" %}
	<div class="relative flex-none">
		{% set pageLinks = page.url | locale_links %}
		{% if pageLinks.length >= 1 %}
			<p class="pb-1">Also available translation: {% for link in pageLinks -%}
					{%- if not loop.first %}, {% endif %}
					<a href="{{link.url}}" lang="{{link.lang}}" hreflang="{{link.lang}}">{{link.lang | localeName}}</a>
				{%- endfor %}
			</p>
		{% endif %}
